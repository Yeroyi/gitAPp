<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:showBottomLine="false"
        titlebar:statusBarMode="dark" />

    <RelativeLayout
        android:id="@+id/layout_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_gradient">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/user_default" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_user_head"
            android:paddingTop="30dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/edit_userName"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/tv_user_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_user_name"
            android:background="@mipmap/edit_ic" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/list_view_divider" />


        <TextView
            android:id="@+id/textRecord"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_pw"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="修改密码"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/list_view_divider" />

        <TextView
            android:id="@+id/textCalculator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_tel"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="联系我们"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/list_view_divider" />

        <TextView
            android:id="@+id/textHelper"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_info"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="使用帮助"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/list_view_divider" />

        <TextView
            android:id="@+id/textSetting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_setting"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="设置"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/list_view_divider" />

        <TextView
            android:id="@+id/textCleardata"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/trash"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="清除缓存"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/list_view_divider" />

        <TextView
            android:id="@+id/loginout_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_out"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="退出登录"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/list_view_divider" />

    </LinearLayout>
</LinearLayout>